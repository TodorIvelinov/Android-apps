<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/blue"
		tools:context=".WelcomeFragment">

		<TextView
			android:id="@+id/fragment_welcome_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/fragment_welcome_title_margin_top"
			android:text="@string/welcome_fragment_text"
			android:textStyle="bold"
			android:textSize="@dimen/fragment_welcome_title_text_size"
			android:textColor="@color/black"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<Spinner
			android:id="@+id/fragment_game_cards_spinner"
			android:layout_width="match_parent"
			android:layout_height="@dimen/fragment_welcome_game_cards_spinner_height"
			android:background="@color/lavender"
			android:popupBackground="@color/lavender"
			android:layout_marginHorizontal="@dimen/fragment_welcome_game_cards_spinner_horizontal_margin"
			android:layout_marginTop="@dimen/spinner_margin_top"
			android:textSize="@dimen/spinner_text_size"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/fragment_welcome_title" />

	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
